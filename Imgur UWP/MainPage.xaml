<Page
    x:Class="ImgurUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImgurUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Dark">
        <TextBox x:Name="pinBox" Margin="91,245,92,0" TextWrapping="Wrap" Text="PIN code" PointerEntered="pinBox_PointerEntered" Height="38" VerticalAlignment="Top" TextChanged="pinBox_TextChanged"/>
        <Button x:Name="buttonConnection" Content="Log in" HorizontalAlignment="Center" Height="42" Margin="91,379,92,219" VerticalAlignment="Center" Width="177" Click="buttonConnection_Click" RenderTransformOrigin="0.5,0.5"/>
        <TextBlock x:Name="infoBlock" Height="36" Margin="91,204,92,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Button x:Name="tokenButton" Content="Get new PIN code" HorizontalAlignment="Center" Height="42" Margin="91,426,92,172" VerticalAlignment="Stretch" Width="177" Click="tokenButton_Click"/>
        <Image x:Name="image" Source="Assets/imgur.png" HorizontalAlignment="Center" Margin="91,80,92,0" VerticalAlignment="Top" Height="60" RenderTransformOrigin="0.5,0.5" Width="177"/>
    </Grid>
</Page>
